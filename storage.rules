rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Constants (Firebase Storage rules don't support variables)
    // MAX_VIDEO_SIZE_BYTES = 524288000 (500MB)
    
    // Multi-tenant structure: company-specific video storage
    match /companies/{companyId}/videos/{allPaths=**} {
      // Allow authenticated users from the same company to upload videos
      allow read: if request.auth != null && 
                     request.auth.token.companyId == companyId;
      allow write: if request.auth != null && 
                      request.auth.token.companyId == companyId &&
                      request.resource.size < 524288000 && // Max 500MB
                      request.resource.contentType.matches('video/.*');
    }
    
    // Processed videos storage
    match /companies/{companyId}/processed/{allPaths=**} {
      allow read: if request.auth != null && 
                     request.auth.token.companyId == companyId;
      // Only Cloud Functions can write processed videos
      allow write: if false;
    }
  }
}
